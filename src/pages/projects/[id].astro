---
import HeadDashboard from "@/components/HeadDashboard.astro";
import DashboardNav from "@/components/DashboardNav.astro";
import Icon from "@/components/Icon.astro";
import WrappedPopover from "@/components/ui/WrappedPopover";
import Board from "@/components/ui/Board.tsx";

export async function getStaticPaths() {
  const response = await fetch("http://localhost:4321/projects/");
  const projects = await response.json();
  return projects.map((project) => {
    return {
      params: { id: project.id },
    };
  });
}

const { id } = Astro.params;
const projectResponse = await fetch(`http://localhost:4321/projects/${id}`);
