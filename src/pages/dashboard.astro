---
import Icon from "../components/Icon.astro";
import Dropdown from "../components/Dropdown.astro";
import { Image } from "astro:assets";
import Calendar from "../components/Calendar.astro";
import Menu from "../components/Menu.astro";
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <style>
      .padre-proyectos > div {
        margin: 10px;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <div
      class="nav-wrapper fixed top-0 z-40 w-full bg-white-500 flex flex-row justify-center items-center bg-white border-b border-b-gray-300 shadow-xs"
    >
      <header
        class="flex justify-between items-center w-full max-w-7xl bg-white"
      >
        <div class="section flex justify-start items-start flex-col w-full">
          <div
            class="logo flex flex-row cursor-pointer p-2 bg-grape-950 text-grape-300 hover:bg-opacity-95"
          >
            <a href="/dashboard" aria-label="swifly">
              <Icon icon="swifly" size="2.6em" />
            </a>
            <h1 class="mx-2 sr-only">Swifly</h1>
          </div>
        </div>
        <nav class="text-grape-950 flex flex-row items-center justify-center">
          <ul class="flex flex-row items-center justify-evenly">
            <li
              class="inline-flex cursor-pointer w-full justify-center mx-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-grape-950 shadow-sm ring-1 ring-inset ring-grape-900 hover:bg-grape-100"
            >
              <div
                class="rounded-lg create flex flex-row items-center justify-center text-grape-900 cursor-pointer hover:bg-grape-100"
              >
                <Icon icon="plus" size="2em" />
                <h5 class="sr-only">Crear proyecto</h5>
              </div>
            </li>
            <li
              class="inline-flex cursor-pointer w-full justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-grape-950 shadow-sm ring-1 ring-inset ring-grape-900 hover:bg-grape-100"
            >
              <Icon icon="search" size="2em" />
              <h5 class="sr-only">Buscar</h5>
            </li>
            <li class="mx-1.5">
              <Dropdown />
              <h5 class="sr-only">Notificaciones</h5>
            </li>
            <li
              class="inline-flex cursor-pointer w-full justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-grape-950 shadow-sm ring-1 ring-inset ring-grape-900 hover:bg-red-100 hover:ring-red-900 hover:text-red-900"
            >
              <Icon icon="signout" size="2em" />
              <h5 class="sr-only">Cerrar sesión</h5>
            </li>
            <li class="ml-8 mr-4">
              <div
                class="profile flex justify-center flex-col items-center relative"
              >
                <div
                  class="pfp rounded-full border border-grape-900 overflow-hidden size-12 shadow-lg cursor-pointer hover:opacity-90"
                >
                  <Image
                    src="https://img.freepik.com/foto-gratis/mujer-bastante-joven-feliz-que-presenta-camara-parque-ciudad_1262-19158.jpg?t=st=1715065018~exp=1715068618~hmac=a7a350bdf7852d0a6319c053874ec91f979da5bbec25e65d8caefcecd84b7c38&w=1380"
                    alt="Foto de perfil personal"
                    width="100"
                    height="100"
                    loading="eager"
                    class="object-cover size-full"
                  />
                </div>
                <div
                  class="status status-online rounded-full size-3 bg-green-600 absolute top-9 left-8 border-t border-t-green-700"
                >
                </div>
              </div>
            </li>
            <li class="bg-red-500 menu-1">
              <Menu
                class="menu-1"
                icon="moon-stars"
                srtitle="Buscar"
                title="Buscar"
                id="menu-1"
              >
                <div slot="children">
                  <form action="/search" method="get">
                    <input type="text" name="q" placeholder="Buscar..." />
                    <input type="submit" value="Buscar" />
                  </form>
                </div>
              </Menu>
            </li>
            <li class="bg-red-500 menu-2">
              <Menu
                class="menu-1"
                icon="moon-stars"
                srtitle="Buscar"
                title="Buscar"
                id="menu-1"
              >
                <div slot="children">
                  <form action="/search" method="get">
                    <input type="text" name="q" placeholder="Buscar..." />
                    <input type="submit" value="Buscar" />
                  </form>
                </div>
              </Menu>
            </li>
            <li class="bg-red-500 menu-3">
              <Menu
                class="menu-1"
                icon="moon-stars"
                srtitle="Buscar"
                title="Buscar"
                id="menu-1"
