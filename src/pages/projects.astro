---
import DashboardNav from "../components/DashboardNav.astro";
import HeadDashboard from "../components/HeadDashboard.astro";
import Icon from "../components/Icon.astro";
---

<html lang="es">
  <HeadDashboard subtitle="Mis proyectos" />
  <body class="bg-gray-100 flex flex-col justify-center items-center">
    <DashboardNav />
    <div
      class="project-container mt-24 rounded-xl bg-white w-full max-w-7xl border border-gray-300 p-12"
    >
      <div class="project-wrapper flex flex-row justify-start items-end gap-2">
        <h2>Título de proyecto</h2>
        <div
          class="project-edit cursor-pointer text-grape-900 text-opacity-75 hover:text-opacity-100"
        >
          <Icon icon="edit" size="0.9em" />
        </div>
      </div>
      <div class="project-utils">
        <button
          class="add-card flex flex-row items-center justify-center gap-2 bg-plum-200 border border-plum-600 rounded-lg p-2 text-plum-600 font-semibold shadow-sm my-4 hover:opacity-90"
          >Añadir lista
