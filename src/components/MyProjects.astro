---
import DashboardNav from "./DashboardNav.astro";
import HeadDashboard from "./HeadDashboard.astro";
const currentYear = new Date().getFullYear();
const { title } = Astro.props;
---

<html lang="es">
  <!-- head -->
  <HeadDashboard subtitle="Mis proyectos" />
  <body class="bg-gray-100">
    <!-- dashboard navigation bar -->
    <DashboardNav />
    <!-- page content -->
    <div
      class="content p-8 md:p-0 mt-24 w-full flex flex-col md:flex-row gap-4 justify-center items-start"
    >
      <div>
        <!-- main -->
        <main
          class="flex flex-col gap-2 justify-center items-start bg-white-200 p-10 rounded-lg bg-white border border-gray-300 shadow-sm w-full h-screen max-w-4xl"
        >
          <h2 class="text-grape-800 font-semibold text-2xl not-sr-only">
            Mis proyectos
          </h2>
          <hr class="h-px w-full text-gray-400 my-4" />
          <section
            class="my-projects flex flex-row justify-center items-start sm:justify-start flex-wrap basis-1/3 gap-2"
          >
            <div
              class="project rounded-xl h-32 w-64 border shadow-inner bg-gray-200 hover:bg-opacity-85 flex flex-col items-center justify-start cursor-pointer"
            >
              <h5 class="font-semibold text-gray-600 p-2">{title}</h5>
              <div class="p-4 w-full"></div>
            </div>
          </section>
        </main>

        <!-- footer -->
        <footer
          class="mt-16 bg-grape-950 text-grape-200 w-full flex justify-center items-center"
        >
          <div
            class="footer-wrapper bg-grape-950 w-full max-w-7xl h-32 flex justify-between items-center text-sm font-semibold"
          >
            <div class="group p-6">
              <p>&copy; {currentYear} Swifly</p>
            </div>
            <p class="socials flex gap-4 p-6">
              <a
                class="border-b border-b-grape-950 hover:border-b-grape-300"
                href="https://X.com/me"
              >
                X</a
              >
              <a
                class="border-b border-b-grape-950 hover:border-b-grape-300"
                href="https://github.com/me"
              >
                GitHub</a
              >
              <a
                class="border-b border-b-grape-950 hover:border-b-grape-300"
                href="https://instagram.com/me"
              >
                Instagram</a
              >
            </p>
          </div>
        </footer>
        <!-- end footer tag -->
        <style>
          main > section {
            margin: 24px 0px 24px 0px;
          }

          * {
            scrollbar-width: thin;
          }

          input {
            box-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.05);
          }
        </style>
      </div><!--  styling that is easier to get done without tailwind or astro -->
    </div>
  </body>
</html>
